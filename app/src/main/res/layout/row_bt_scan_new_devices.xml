<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_wifi_scan_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Wifi NAME"
        android:textColor="#000000"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textview_wifi_scan_ssid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Wifi ssid"
        android:textColor="#000000"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textview_wifi_scan_name"
        app:layout_constraintTop_toBottomOf="@+id/textview_wifi_scan_name"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textview_wifi_scan_name"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textview_wifi_mac"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="WIFIMAC"
        android:textColor="#000000"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textview_wifi_scan_ssid"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_wifi_scan_ssid"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textview_wifi_scan_ssid" />

    <TextView
        android:id="@+id/textview_wifi_signal_strength"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="WIFI Signal Strength"
        android:textColor="#000000"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/textview_wifi_mac"
        app:layout_constraintTop_toBottomOf="@+id/textview_wifi_mac"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textview_wifi_mac"
        android:layout_marginTop="8dp" />

</android.support.constraint.ConstraintLayout>